<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading panel-hub">
        <h2 class="hub-h1">Зарегистрироваться</h2>
      </div>
      <div class="panel-body panel-hub">
      	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="form-group">
				  	<%= f.label :email %><br />
				  	<%= f.email_field :email, autofocus: true, class: "form-control" %>
				  </div>

				  <div class="form-group">
				  	<%= f.label 'Пароль'%> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
				    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
				  </div>

				  <div class="form-group">
				  	<%= f.label 'Подтвердите пароль' %><br />
				    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
				  </div>

				  <div class="form-group">
				  	<%= f.submit "Войти", class: "btn btn-default" %>
				  </div>
				<% end %>

				
      </div>
		</div>
	</div>
</div>