!!! 5
%html
%head
	%title JollyHUB
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand 
				=link_to "Jolly", root_path
				%span= "Hub"

			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Новый Pin", new_pin_path
					%li= link_to "Аккаунт", edit_user_registration_path
					%li= link_to "Выйти", destroy_user_session_path, method: :delete
			- else
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Регистрация", new_user_registration_path
					%li= link_to "Войти", new_user_session_path
	.container		
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert alert-info alert-hub"

		= yield

